<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnboardingEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">44dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_onboarding</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="OnboardingButtonNext" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/signup_next_button_color</item>
        <item name="cornerRadius">@dimen/button_next_radius</item>
        <item name="android:layout_height">@dimen/button_next_height</item>
        <item name="android:stateListAnimator">@animator/shadow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_onboarding</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
    </style>

    <style name="AccountViewGroup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/clickable_view_group_background</item>
        <item name="android:paddingVertical">12dp</item>
    </style>


</resources>