<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contacts_sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_contacts"
            style="@style/ApplicationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_toolbar_contact_list">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xabber.presentation.custom.ShapeOfView
                    android:id="@+id/shape_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shape_clip_drawable="@drawable/ic_mask_circle">

                    <ImageView
                        android:id="@+id/im_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/avatar_account_content_description" />
                </com.xabber.presentation.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/avatar_status"
                    android:layout_width="@dimen/status_size_toolbar"
                    android:layout_height="@dimen/status_size_toolbar"
                    android:contentDescription="@string/status_content_description"
                    android:src="@drawable/status_chat"
                    app:layout_constraintBottom_toBottomOf="@id/shape_view"
                    app:layout_constraintEnd_toEndOf="@id/shape_view" />

                <TextView
                    android:id="@+id/tv_initials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_900"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/shape_view"
                    app:layout_constraintEnd_toEndOf="@id/shape_view"
                    app:layout_constraintStart_toStartOf="@id/shape_view"
                    app:layout_constraintTop_toTopOf="@id/shape_view" />

                <TextView
                    android:id="@+id/tv_contact_title"
                    style="@style/ApplicationToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/contacts_toolbar_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shape_view"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

</androidx.constraintlayout.widget.ConstraintLayout>
