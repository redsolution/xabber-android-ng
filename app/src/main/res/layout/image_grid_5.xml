<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_5"
    android:layout_width="280dp"
    android:layout_height="215dp"
    android:paddingHorizontal="4dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/shape0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp">

                    <ImageView
                        android:id="@+id/ivImage0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/iv_video_label_0"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="#CC757575"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    app:tint="@color/white"  />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/shape4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp">

                    <ImageView
                        android:id="@+id/ivImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/iv_video_label_1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="#CC757575"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/shape1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp">

                    <ImageView
                        android:id="@+id/ivImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/iv_video_label_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="#CC757575"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    app:tint="@color/white"  />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/shape3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp">

                    <ImageView
                        android:id="@+id/ivImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/iv_video_label_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="#CC757575"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    app:tint="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/shape2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp">

                    <ImageView
                        android:id="@+id/ivImage4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>

                <ImageView
                    android:id="@+id/iv_video_label_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="#CC757575"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    app:tint="@color/white"  />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/message_information_stamp" />

</FrameLayout>