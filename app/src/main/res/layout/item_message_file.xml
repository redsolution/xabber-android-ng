<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/file_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="280dp"
    android:orientation="horizontal"
    android:paddingEnd="4dp"
    tools:ignore="RtlSymmetry">

    <RelativeLayout
        android:id="@+id/file_icon_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_green"
            android:paddingHorizontal="11dp"
            app:srcCompat="@drawable/ic_file_grey"
            app:tint="@color/grey_700" />

        <ProgressBar
            android:id="@+id/upload_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_transparent"
            android:indeterminate="true"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/round_shape_transparent"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/cancel_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/file_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:minWidth="140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="middle"
            android:lines="1"
            android:maxWidth="196dp"
            android:text="@string/undefined_file"
            android:textColor="@color/grey_700"
            android:textStyle="bold"
            tools:visibility="gone" />

        <com.xabber.presentation.custom.PlayerVisualizerView
            android:id="@+id/audio_visualizer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <SeekBar
            android:id="@+id/audio_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingHorizontal="0dp"
            android:thumb="@color/transparent"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/grey_700"
            tools:text="0 bytes" />
    </LinearLayout>
</LinearLayout>