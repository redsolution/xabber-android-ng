<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/co"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/mes_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/message_balloon"
        app:layout_constraintTop_toTopOf="@id/message_balloon"
        app:layout_constraintBottom_toBottomOf="@id/message_balloon"
        app:layout_constraintStart_toStartOf="@id/message_balloon"/>

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="2dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="end"
        android:id="@+id/message_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        <com.xabber.utils.custom.CustomFlexboxLayout
            android:layout_marginVertical="2dp"
            android:minHeight="20dp"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/message_flex_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewPartMain="@+id/message_text"
            app:viewPartSlave="@+id/message_info">

            <com.xabber.utils.custom.CorrectlyTouchEventTextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:autoLink="all"
                android:textSize="14sp"
                android:textColor="@color/black_text"
                android:lineHeight="20dp" />

            <include
                android:id="@+id/message_info"
                layout="@layout/item_message_status" />

        </com.xabber.utils.custom.CustomFlexboxLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>