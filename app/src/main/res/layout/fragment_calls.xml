<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/calls_toolbar"
            style="@style/ApplicationToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xabber.presentation.custom.ShapeOfView
                    android:id="@+id/shape_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shape_clip_drawable="@drawable/ic_mask_circle">

                    <ImageView
                        android:id="@+id/im_avatar"
                        android:layout_width="@dimen/mask32"
                        android:layout_height="@dimen/mask32"
                        android:contentDescription="@string/avatar_toolbar_im_description" />
                </com.xabber.presentation.custom.ShapeOfView>

                <TextView
                    android:id="@+id/tv_initials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_900"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/shape_view"
                    app:layout_constraintEnd_toEndOf="@id/shape_view"
                    app:layout_constraintStart_toStartOf="@id/shape_view"
                    app:layout_constraintTop_toTopOf="@id/shape_view" />

                <ImageView
                    android:id="@+id/avatar_status"
                    android:layout_width="@dimen/status_size_toolbar"
                    android:layout_height="@dimen/status_size_toolbar"
                    android:contentDescription="@string/status_content_description"
                    android:src="@drawable/status_chat"
                    app:layout_constraintBottom_toBottomOf="@id/shape_view"
                    app:layout_constraintEnd_toEndOf="@id/shape_view" />

                <TextView
                    style="@style/ApplicationToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calls_toolbar_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shape_view"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_advertisement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_less_than_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/adt"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

</androidx.constraintlayout.widget.ConstraintLayout>