<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/reply_marker"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/red_500" />

    <ImageView
        android:id="@+id/miniature_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_description" />

    <TextView
        android:textColor="@color/red_500"
        android:textSize="14sp"
        android:layout_above="@id/tv_reply_message_body"
        android:id="@+id/tv_reply_message_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/miniature_image"
        android:maxLines="1" />

    <TextView
        android:textSize="14sp"
        android:layout_below="@id/tv_reply_message_username"
        android:layout_toStartOf="@id/miniature_image"
        android:id="@+id/tv_reply_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>