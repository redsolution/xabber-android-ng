<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outgoing_message"
    android:paddingEnd="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:scaleX="-1"
        android:id="@+id/balloon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@id/message_balloon"
        android:layout_alignBottom="@id/message_balloon"
        android:layout_alignEnd="@id/message_balloon"
        android:layout_alignTop="@id/message_balloon" />

    <FrameLayout
        android:scaleX="-1"
        android:id="@+id/tail"
        android:layout_alignBottom="@id/message_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/message_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingVertical="2dp"
        android:layout_marginStart="-6.5dp"
        android:layout_marginVertical="2dp"
        android:orientation="vertical"
       android:layout_toEndOf="@id/tail">

        <com.xabber.utils.custom.CustomFlexboxLayout
            android:id="@+id/text_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:minHeight="20dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            app:viewPartMain="@+id/message_text"
            app:viewPartSlave="@+id/message_info">

            <com.xabber.utils.custom.CorrectlyTouchEventTextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:autoLink="all"
                android:lineHeight="20dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                tools:targetApi="p" />

            <include
                android:id="@+id/message_info"
                layout="@layout/item_message_status" />
        </com.xabber.utils.custom.CustomFlexboxLayout>
    </LinearLayout>


</RelativeLayout>