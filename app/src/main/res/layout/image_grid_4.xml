<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <com.xabber.utils.custom.ShapeOfView
            android:id="@+id/cardview_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp">
            <ImageView
                android:id="@+id/ivImage0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.xabber.utils.custom.ShapeOfView>
            <ImageView
                android:id="@+id/im_video_label"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/circle_grey_transparent"
                android:layout_width="36dp"
                android:layout_height="36dp" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <com.xabber.utils.custom.ShapeOfView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:id="@+id/cardview_2"
               >

                <ImageView
                    android:id="@+id/ivImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label_1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <com.xabber.utils.custom.ShapeOfView
                android:id="@+id/cardview_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
               >

                <ImageView
                    android:id="@+id/ivImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label_2"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <com.xabber.utils.custom.ShapeOfView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:id="@+id/cardview_3">

                <ImageView
                    android:id="@+id/ivImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label_3"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/message_information_stamp"/>
</FrameLayout>