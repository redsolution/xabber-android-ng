<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/ApplicationToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_discover_toolbar_title"
                style="@style/ApplicationToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discover_toolbar_title" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.xabber.utils.custom.ShapeOfView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_clip_drawable="@drawable/circle">

        <ImageView
            android:src="@drawable/ic_qrcode"
            android:id="@+id/map_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/grey_200"
            android:elevation="10dp"
            android:scaleType="fitXY" />
    </com.xabber.utils.custom.ShapeOfView>

</LinearLayout>
