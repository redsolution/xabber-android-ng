<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottom_sheet_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_onboarding_small"
        android:src="@drawable/bottom_sheet_swipe_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_onboarding_small"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_swipe">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/green_tint"
                android:layout_width="@dimen/item_avatar_background_size"
                android:layout_height="@dimen/item_avatar_background_size"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/green_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/green_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orange_tint"
                android:layout_width="@dimen/item_avatar_background_size"
                android:layout_height="@dimen/item_avatar_background_size"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/orange_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/orange_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/red_tint"
                android:layout_width="@dimen/item_avatar_background_size"
                android:layout_height="@dimen/item_avatar_background_size"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/red_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/red_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/blue_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/blue_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/blue_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/indigo_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/indigo_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/indigo_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purple_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/purple_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/purple_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lime_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/lime_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/lime_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pink_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/pink_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/pink_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amber_tint"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/amber_400">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/amber_tint_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/stroke_shape"
                    android:visibility="gone" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/palette"
        app:layout_constraintEnd_toStartOf="@+id/center_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/palette">

        <TextView
            android:id="@+id/avatarBackground"
            android:layout_width="@dimen/mask128"
            android:layout_height="@dimen/mask128"
            android:layout_margin="8dp"
            android:background="@drawable/backround_blue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/default_emoji_avatar"
            android:textColor="@color/black"
            android:textSize="48sp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_edit_smile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@id/avatarBackground"
            android:layout_alignBottom="@id/avatarBackground"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/avatarBackground"
            app:layout_constraintEnd_toEndOf="@+id/avatarBackground"
            android:contentDescription="@string/edit_smile_avatar_image_description"
            app:srcCompat="@drawable/edit_grey_in_white_circle"/>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        style="@style/OnboardingButtonNext"
        android:layout_width="0dp"
        android:layout_margin="@dimen/margin_onboarding_medium"
        android:text="@string/save_btn_label"
        android:theme="@style/OnboardingButtonNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palette" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
