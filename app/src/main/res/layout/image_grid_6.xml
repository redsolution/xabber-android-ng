<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_6"
    android:layout_width="280dp"
    android:layout_height="215dp"
    android:paddingHorizontal="4dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <com.xabber.utils.custom.ShapeOfView
                android:id="@+id/cardview_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp">

                <ImageView
                    android:id="@+id/ivImage0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/cardview_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                  >

                    <ImageView
                        android:id="@+id/ivImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>
                    <ImageView
                        android:id="@+id/im_video_label_1"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/circle_grey_transparent"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/cardview_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                   >

                    <ImageView
                        android:id="@+id/ivImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>
                    <ImageView
                        android:id="@+id/im_video_label_2"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/circle_grey_transparent"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <com.xabber.utils.custom.ShapeOfView
                android:id="@+id/cardview_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp">

                <ImageView
                    android:id="@+id/ivImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label_3"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <com.xabber.utils.custom.ShapeOfView
                android:id="@+id/cardview_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp">

                <ImageView
                    android:id="@+id/ivImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </com.xabber.utils.custom.ShapeOfView>
                <ImageView
                    android:id="@+id/im_video_label_4"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_grey_transparent"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.xabber.utils.custom.ShapeOfView
                    android:id="@+id/cardview_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_500"
                    android:backgroundTint="@color/red_500">

                    <ImageView
                        android:backgroundTint="#99616161"
                        android:backgroundTintMode="src_over"
                        android:id="@+id/ivImage5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.xabber.utils.custom.ShapeOfView>
                    <ImageView
                        android:id="@+id/im_video_label_5"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/circle_grey_transparent"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                </FrameLayout>
                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/message_information_stamp" />

</FrameLayout>