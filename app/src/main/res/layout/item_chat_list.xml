<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_ground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_list_item_height"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/profile_divider"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:background="@color/green_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_chat_list_item_avatar"
        android:layout_width="@dimen/mask56"
        android:layout_height="@dimen/mask56"
        android:layout_margin="@dimen/margin_less_than_medium"
        android:contentDescription="@string/chat_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_chat_status_16"
        android:layout_width="@dimen/chat_status_16_size"
        android:layout_height="@dimen/chat_status_16_size"
        android:contentDescription="@string/chat_status_16_image_description"
        app:layout_constraintBottom_toBottomOf="@id/im_chat_list_item_avatar"
        app:layout_constraintEnd_toEndOf="@id/im_chat_list_item_avatar"
        tools:src="@drawable/status_bot_online" />

    <ImageView
        android:id="@+id/im_chat_status_14"
        android:layout_width="@dimen/chat_status_14_size"
        android:layout_height="@dimen/chat_status_14_size"
        android:contentDescription="@string/chat_status_14_image_description"
        android:src="@drawable/status_online"
        app:layout_constraintBottom_toBottomOf="@id/im_chat_list_item_avatar"
        app:layout_constraintEnd_toEndOf="@id/im_chat_list_item_avatar" />

    <TextView
        android:id="@+id/tv_chat_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginEnd="94dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/grey_900"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/im_chat_list_item_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chat_list_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:textColor="@color/grey_text_2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/date/hhmm" />

    <TextView
        android:id="@+id/tv_chat_list_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="72dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/grey_text_2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/im_chat_list_item_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_name"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/im_chat_list_muted"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/margin_extra_small"
        android:contentDescription="@string/muted_chat_image_description"
        android:src="@drawable/ic_bell_off_light_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_list_name"
        app:layout_constraintStart_toEndOf="@id/tv_chat_list_name"
        app:layout_constraintTop_toTopOf="@id/tv_chat_list_name"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/im_chat_list_pinned"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:src="@drawable/ic_pinned"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_timestamp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/im_chat_list_status_message"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_check_all_green"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/im_chat_list_pinned"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_list_timestamp"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/unread_messages_wrapper"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/green_500"
        android:visibility="gone"
        android:elevation="0dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/im_chat_list_pinned"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_timestamp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/unread_messages_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lines="1"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:maxLength="2"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="00" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_sync_image"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="2dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:visibility="gone"
        app:cardBackgroundColor="@color/grey_200"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_list_timestamp"
        app:layout_constraintStart_toEndOf="@id/tv_chat_list_timestamp"
        app:layout_constraintTop_toTopOf="@id/tv_chat_list_timestamp"
        tools:visibility="visible" />

    <View
        android:id="@+id/item_divider"
        android:layout_width="0dp"
        android:alpha="0.5"
        android:layout_height="0.5dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_chat_list_name" />
</androidx.constraintlayout.widget.ConstraintLayout>