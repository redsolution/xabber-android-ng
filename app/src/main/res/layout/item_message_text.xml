<?xml version="1.0" encoding="utf-8"?>
<com.xabber.utils.custom.CustomFlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_flex_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:viewPartMain="@+id/message_text"
    app:viewPartSlave="@+id/message_info">

    <com.xabber.utils.custom.CorrectlyTouchEventTextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:autoLink="all"
        android:textColor="@color/black_text"
        app:lineHeight="18dp"
        tools:text="Some text" />

    <include
        android:id="@+id/message_info"
        layout="@layout/item_message_status" />

</com.xabber.utils.custom.CustomFlexboxLayout>