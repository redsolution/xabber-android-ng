<?xml version="1.0" encoding="utf-8"?>
<com.xabber.utils.custom.CustomFlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end|center_vertical"
    android:minHeight="20dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="2dp"
    app:viewPartMain="@+id/message_text"
    app:viewPartSlave="@+id/message_info">

    <com.xabber.utils.custom.CorrectlyTouchEventTextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:autoLink="all"
        android:lineHeight="20dp"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <include
        android:id="@+id/message_info"
        layout="@layout/item_message_status" />
</com.xabber.utils.custom.CustomFlexboxLayout>