<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:paddingVertical="2dp"
        android:paddingHorizontal="4dp"
        android:id="@+id/cv_message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:maxHeight="372dp"
            android:maxWidth="372dp"
            android:adjustViewBounds="true"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:id="@+id/ivImage0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/image_message_info"
        android:layout_width="wrap_content"
        android:elevation="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:background="@drawable/system_message_background"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_image_sending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="12dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="14:30"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/im_image_message_status"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_check_green" />
    </LinearLayout>
</FrameLayout>