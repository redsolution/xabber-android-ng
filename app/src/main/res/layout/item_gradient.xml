<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewWall"
  android:padding="2dp"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/shape0"
        android:layout_margin="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
    app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/transparent"
    android:background="@color/transparent">

        <ImageView
        android:background="@color/transparent"
        android:id="@+id/cvWallpaper"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="18dp"/>
</androidx.cardview.widget.CardView>

    <FrameLayout
        app:layout_constraintTop_toTopOf="@id/shape0"
        app:layout_constraintBottom_toBottomOf="@id/shape0"
        app:layout_constraintEnd_toEndOf="@id/shape0"
        app:layout_constraintStart_toStartOf="@id/shape0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cats_repeat"/>
</androidx.constraintlayout.widget.ConstraintLayout>