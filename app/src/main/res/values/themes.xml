<resources>
    <!-- Base application theme. -->

    <style name="ThemeOnboarding" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left_grey</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialogTheme</item>
    </style>

    <style name="ThemeApplication" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="toolbar_color">@color/blue_500</item>
        <item name="colorPrimary">@color/blue_300</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="action_with_chat_background">@color/grey_800</item>
        <item name="chat_item_background">@color/white</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="transparent_rounded_background">@drawable/rounded_background_grey_transparent
        </item>
        <item name="avatar_initials_color">@color/grey_900</item>
        <item name="avatar_mask">@drawable/circle56</item>
        <item name="chat_input_background">@color/white</item>
    </style>

    <style name="ThemeImageViewer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left_white</item>
    </style>

    <style name="BaseBottomSheetDialogTheme" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/grey_100</item>
    </style>

    <style name="PickGeolocationActivity" parent="ThemeApplication">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="SplashScreen" parent="ThemeApplication">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:screenOrientation">sensorPortrait</item>
    </style>

</resources>