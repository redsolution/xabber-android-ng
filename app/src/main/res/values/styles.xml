<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StartButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="OnboardingButtonNext" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/signup_next_button_color</item>
        <item name="cornerRadius">@dimen/button_next_radius</item>
        <item name="android:layout_height">@dimen/button_next_height</item>
        <item name="android:stateListAnimator">@animator/shadow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
    </style>

    <style name="OnboardingEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">48dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="CollapsingToolbarTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">19sp</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AvatarBottomSheetItem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">@dimen/avatar_bottom_sheet_item_height</item>
        <item name="android:background">@drawable/item_bottom_sheet_background_dark</item>
    </style>

    <style name="ApplicationToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:theme">@style/ToolbarAccountColorTheme</item>
        <item name="titleTextStyle">@style/ApplicationToolbarTitle</item>
        <item name="android:titleTextStyle">@style/ApplicationToolbarTitle</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="ApplicationToolbarTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ToolbarAccountColorTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ButtonToolbar" parent="ThemeApplication">
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_gravity">end</item>
        <item name="background">@color/transparent</item>
        <item name="textAllCaps">true</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_size_button_toolbar</item>
    </style>

        <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
            <item name="android:textColorPrimary">@android:color/black</item>
            <item name="android:background">@android:color/white</item>
            <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButtonStyle</item>
            <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButtonStyle</item>
        </style>

    <style name="MyPositiveButtonStyle">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyNegativeButtonStyle">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ClickableViewGroup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/clickable_view_group_background</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_middle</item>
        <item name="android:paddingBottom">@dimen/padding_middle</item>
    </style>

    <style name="AccountSettingsIcon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="AccountSettingsTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AccountSettingsSubtitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_600</item>
    </style>

    <style name="ContactAccountPanelImage" parent="ThemeApplication">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="tint">@color/blue_500</item>
    </style>

    <style name="ContactAccountPanelTextview" parent="ThemeApplication">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MapControllerButtonStyle" parent="PickGeolocationActivity">
        <item name="android:background">@drawable/white_rectangle_corners</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="SwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="popupMenuBackground">@drawable/menu_background</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:dropDownHorizontalOffset">16dp</item>
    </style>

    <style name="RadioButton" parent="ThemeApplication">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Theme.NoWiredStrapInNavigationBar" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="AttachmentBottomSheetAction" parent="ThemeApplication">
        <item name="android:paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>