<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StartButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="OnboardingButtonNext" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/signup_next_button_color</item>
        <item name="cornerRadius">@dimen/button_next_radius</item>
        <item name="android:layout_height">@dimen/button_next_height</item>
        <item name="android:stateListAnimator">@animator/shadow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_onboarding</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_onboarding</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
    </style>

    <style name="OnboardingEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">44dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textSize">@dimen/onboarding_button_font_size</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="CollapsingToolbarTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AvatarBottomSheetItem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">@dimen/avatar_bottom_sheet_item_height</item>
        <item name="android:background">@drawable/item_bottom_sheet_background_dark</item>
    </style>

    <style name="ApplicationToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:theme">@style/ToolbarAccountColorTheme</item>
    </style>

    <style name="ApplicationAppbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/blue_500</item>
    </style>

    <style name="AvatarToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">@dimen/mask32</item>
        <item name="android:layout_width">@dimen/mask32</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ApplicationToolbarTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="ToolbarAccountColorTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AccountViewGroup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/clickable_view_group_background</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AccountSettingsIcon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="AccountSettingsTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AccountSettingsSubtitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_600</item>
    </style>

    <style name="AccountSettingsViewGroupStyle" parent="ThemeApplication">
        <item name="background">@drawable/clickable_view_group_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ContactViewCollapsingToolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ContactAccountPanelImage" parent="ThemeApplication">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="tint">@color/blue_500</item>
    </style>

    <style name="ContactAccountPanelTextview" parent="ThemeApplication">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_small</item>
        <item name="android:gravity">center</item>
    </style>


</resources>